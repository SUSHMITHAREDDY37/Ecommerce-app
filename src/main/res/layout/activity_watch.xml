<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.aliexpress.WatchActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/cart" />

        <SearchView
            android:id="@+id/searchview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imageView" />

    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/progress_horizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:paddingLeft="10dp"
                app:srcCompat="@drawable/wp1" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/wp2" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="100dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/wp3" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/wp4" />
            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/wp5" />
        </LinearLayout>

    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Now: US $2.54 - 2.64"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="180dp"
            android:src="@drawable/camera"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Then US $4.62- 4.80                   -45% off"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="999+"
            android:paddingLeft="70dp"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_marginRight="10dp"/>



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Approx. Rs. 183.97-191.21"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Description"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_marginRight="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Vansvar Gold Sliver Mesh Stainless Steel Watches Women Top Brand Luxury Casual Clock Ladies Wrist Watch Relogio Feminino Gift"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="20dp"
            android:paddingRight="100dp"
            android:text="PRICE"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview7"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="43dp"
            android:text="CAD 180"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="15sp" />


        <Spinner
            android:id="@+id/sort_by_spinner"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textview7"
            android:layout_marginLeft="267dp"
            android:entries="@array/quantity" />

        <Button
            android:id="@+id/next_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/next_button1"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_below="@id/textview7"
            android:text="SAVE FOR LATER" />

        <Button
            android:id="@+id/next_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview7"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:text="DELETE" />

        <TextView
            android:id="@+id/textview9"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_toRightOf="@id/textview5"
            android:text="QUANTITY"
            android:layout_alignParentRight="true"
            android:paddingLeft="100dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUY NOW"
        android:background="#FF0000"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:background="#FA8072"/>


</LinearLayout>